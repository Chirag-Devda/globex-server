<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <title>Add Product</title>
  </head>
  <body class="bg-gray-100 text-gray-800">
    <% if (messages.success) { %>
    <div
      class="absolute top-3 z-10 left-2/4 p-3 text-white rounded-md bg-blue-500"
    >
      <span class="inline-block mt-1 mb-1 text-white">
        <%= messages.success %>
      </span>
    </div>
    <% } %>
    <div class="container mx-auto p-5">
      <h1 class="text-3xl font-bold">Add Product</h1>
      <form
        action="/product/create"
        method="POST"
        enctype="multipart/form-data"
        class="max-w-2xl mx-auto p-6 bg-white shadow-md rounded-lg space-y-6"
      >
        <!-- Product Name -->
        <div class="flex flex-col">
          <label for="name" class="text-gray-700 font-semibold"
            >Product Name</label
          >
          <input
            type="text"
            id="name"
            name="name"
            required
            class="mt-2 p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>

        <!-- Image -->
        <div class="flex flex-col">
          <label for="image" class="text-gray-700 font-semibold"
            >Product Image</label
          >
          <input
            type="file"
            id="image"
            name="image"
            class="mt-2 p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
          <span class="text-gray-500 text-sm mt-1"
            >Or provide an image URL below</span
          >
          <input
            type="url"
            id="imageUrl"
            name="imageUrl"
            placeholder="https://example.com/image.jpg"
            class="mt-2 p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>

        <!-- Price -->
        <div class="flex flex-col">
          <label for="price" class="text-gray-700 font-semibold">Price</label>
          <input
            type="number"
            id="price"
            name="price"
            required
            min="0"
            class="mt-2 p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>

        <!-- Discount -->
        <div class="flex flex-col">
          <label for="discount" class="text-gray-700 font-semibold"
            >Discount (%)</label
          >
          <input
            type="number"
            id="discount"
            name="discount"
            max="100"
            min="0"
            class="mt-2 p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>

        <!-- Description -->
        <div class="flex flex-col">
          <label for="description" class="text-gray-700 font-semibold"
            >Product Description</label
          >
          <textarea
            id="description"
            name="description"
            required
            class="mt-2 p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          ></textarea>
        </div>

        <!-- Category -->
        <div class="flex flex-col">
          <label for="category" class="text-gray-700 font-semibold"
            >Category</label
          >
          <input
            type="text"
            id="category"
            name="category"
            required
            class="mt-2 p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>

        <!-- Stock Quantity -->
        <div class="flex flex-col">
          <label for="stockQuantity" class="text-gray-700 font-semibold"
            >Stock Quantity</label
          >
          <input
            type="number"
            id="stockQuantity"
            name="stockQuantity"
            required
            min="0"
            class="mt-2 p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>

        <!-- Tags -->
        <div class="flex flex-col">
          <label for="tags" class="text-gray-700 font-semibold"
            >Tags (Comma separated)</label
          >
          <input
            type="text"
            id="tags"
            name="tags"
            class="mt-2 p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>

        <!-- Sales Tax Rate -->
        <div class="flex flex-col">
          <label for="salesTaxRate" class="text-gray-700 font-semibold"
            >Sales Tax Rate (%)</label
          >
          <input
            type="number"
            id="salesTaxRate"
            name="salesTaxRate"
            max="100"
            min="0"
            class="mt-2 p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
        </div>

        <!-- Is Active -->
        <div class="flex items-center">
          <input type="checkbox" id="isActive" name="isActive" class="mr-2" />
          <label for="isActive" class="text-gray-700 font-semibold"
            >Active</label
          >
        </div>

        <!-- Submit Button -->
        <div class="flex justify-center">
          <button
            type="submit"
            class="mt-6 px-6 py-3 bg-blue-500 text-white font-semibold rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
            Add Product
          </button>
        </div>
      </form>
    </div>
  </body>
</html>
